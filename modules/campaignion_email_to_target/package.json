{
  "name": "campaignion-e2t-ui",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -e ui_src/main.js -o js/messages_widget.js",
    "watch-css": "node-sass -w -x -q --output-style compressed --include-path node_modules/bootstrap/scss --include-path node_modules/dragula/dist css/scss/messages_widget.scss css/messages_widget.min.css",
    "dev": "npm-run-all --parallel watchify watch-css",
    "browserify": "cross-env NODE_ENV=production browserify -e ui_src/main.js | uglifyjs -c warnings=false -m > js/messages_widget.js",
    "compile-css": "node-sass -x -q --output-style compressed --include-path node_modules/bootstrap/scss --include-path node_modules/dragula/dist css/scss/messages_widget.scss css/messages_widget.min.css",
    "post-css": "postcss -c postcss.options.json",
    "build": "npm run browserify && npm run compile-css && npm run post-css",
    "lint": "eslint --ext .js,.vue ui_src test/unit",
    "test": "karma start karma.conf.js"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "dependencies": {
    "vue": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.1",
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "bootstrap": "^4.0.0-alpha.6",
    "browserify": "^12.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.5",
    "dragula": "^3.7.2",
    "eslint": "^1.10.3",
    "eslint-plugin-html": "^1.1.0",
    "jasmine-core": "^2.4.1",
    "jasmine-sinon": "^0.4.0",
    "karma": "^0.13.15",
    "karma-browserify": "^4.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-jasmine-jquery": "^0.1.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-spec-reporter": "0.0.23",
    "lodash": "^4.17.4",
    "node-sass": "^4.4.0",
    "npm-run-all": "^1.6.0",
    "phantomjs-prebuilt": "^2.1.3",
    "postcss-cli": "^2.6.0",
    "proxyquireify": "^3.0.1",
    "uglify-js": "^2.5.0",
    "vue-resource": "^1.0.3",
    "vue-strap": "^1.1.36",
    "vueify": "^8.5.2",
    "watchify": "^3.4.0"
  }
}
